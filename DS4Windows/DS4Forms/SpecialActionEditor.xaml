                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Header="{lex:Loc UnloadTrigger}" Width="170">
                                    <GridViewColumn.HeaderContainerStyle>
                                        <Style TargetType="{x:Type GridViewColumnHeader}">
